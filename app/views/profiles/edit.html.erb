
<div class="container-fluid bg-grey">
	<div class="row">
		<div class="col-xs-4">
		</div>
		<div class="col-xs-4 form-col">
			<i class="fa fa-user fa-5x item-header"></i>
			<h1 class="item-header">Edit Your Profile</h1>

			<%= form_for [@profile] do | f | %>
			<%= f.label :name %><br>
			<%= f.text_field :name %><br>
<!--  
			<%= f.label :headshot_url %><br>
			<%= f.text_field :headshot_url %><br>
 -->
 			<%= f.label :profilepicture %><br>
			<%= f.file_field :profilepicture %><br>

			<%= f.label :location %><br>
			<%= f.text_field :location %><br>

			<%= f.label :bio %><br>
			<%= f.text_area :bio %><br>

			<%= f.submit %>
			<% end %>

		</div>
		<div class="col-xs-4">
		</div>
	</div>
</div>