<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Show</title>
</head>
<body>
	<%= @profile.name %>
	<br>
	<%= @profile.bio %>
	<br>
	<img src="<%= @profile.profilepicture_url %>" style="width: 200px;">
	<%= link_to "Edit Profile", :edit_profile, class: "btn btn-block btn-xs btn-primary" %>
	<span class="glyphicon glyphicon-user"></span></a>
	<%= link_to "New Item", :new_item %>
	<h3>MY ITEMS</h3>
	<ul class="list-unstyled">
		<% @my_items.each do |i| %>
			<li>
				<%= link_to i.name, item_path(i.id) %>
				<%= i.description %>
				<%= i.item_type.kind %>
				</li>
				<% end %>
	</ul>
	<h4>NEARBY ITEMS</h4>
	<ul class="list-unstyled">
		<% @items.each do |i| %>
			<li>
				<%= link_to i.name, item_path(i.id) %>
				<%= i.description %>
				<%= i.item_type.kind %>
				</li>
				<% end %>
	</ul>
</body>
</html>